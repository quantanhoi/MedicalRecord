<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightcyan"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Text_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="12dp"
        android:text="Doctor"
        android:textColor="@color/darkBlue"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DoctorButton" />

    <Button
        android:id="@+id/SupportButton"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginEnd="86dp"
        android:background="@drawable/ic_baseline_contact_support_24"
        android:onClick="onSupportButtonClicked"
        app:layout_constraintBottom_toBottomOf="@+id/AdminButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/AdminButton"
        app:layout_constraintTop_toTopOf="@+id/AdminButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/AdminButton"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/ic_baseline_medical_information_24"
        android:onClick="onButtonAdminClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DoctorButton" />

    <TextView
        android:id="@+id/text_MR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Medical Record"
        android:textColor="@color/darkBlue"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/green_cross" />

    <ImageView
        android:id="@+id/green_cross"
        android:layout_width="144dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <Button
        android:id="@+id/DoctorButton"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/ic_baseline_local_hospital_24"
        android:onClick="onButtonDoctorClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_MR" />

    <Button
        android:id="@+id/Labor_button"
        android:layout_width="95dp"
        android:layout_height="91dp"
        android:background="@drawable/ic_baseline_local_pharmacy_24"
        android:onClick="onButtonLaborClick"
        app:layout_constraintBottom_toBottomOf="@+id/DoctorButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toEndOf="@+id/DoctorButton"
        app:layout_constraintTop_toTopOf="@+id/DoctorButton"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Text_Labor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="108dp"
        android:text="Labor"
        android:textColor="@color/darkBlue"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Labor_button" />

    <TextView
        android:id="@+id/text_Admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="84dp"
        android:text="Admin"
        android:textColor="@color/darkBlue"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/text_Support"
        app:layout_constraintEnd_toStartOf="@+id/text_Support" />

    <TextView
        android:id="@+id/text_Support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="96dp"
        android:text="Support"
        android:textColor="@color/darkBlue"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SupportButton" />

</androidx.constraintlayout.widget.ConstraintLayout>